@page
@model PSA_OM.Pages.Bookings.Create_AdminModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Booking.ApartmentID" class="control-label"></label>
                <input asp-for="Booking.ApartmentID" class="form-control" type="number" min="1" max="16" required />
                <span asp-validation-for="Booking.ApartmentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.TravellerEmail" class="control-label"></label>
                <select asp-for="Booking.TravellerEmail" class="form-control" asp-items="ViewBag.TravellerEmail" required></select>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckIn" class="control-label"></label>
                <input asp-for="Booking.CheckIn" class="form-control" type="date" required />
                <span asp-validation-for="Booking.CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.CheckOut" class="control-label"></label>
                <input asp-for="Booking.CheckOut" class="form-control" type="date" required />
                <span asp-validation-for="Booking.CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.Cost" class="control-label"></label>
                <input asp-for="Booking.Cost" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="Booking.Cost" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
